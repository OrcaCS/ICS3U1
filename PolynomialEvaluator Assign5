import java.util.Scanner;
import java.util.StringTokenizer;

public class PolynomialEvaluator {
    public static void main(String[] args) throws Exception {
        Scanner keyboard = new Scanner(System.in);
        
        double result = 0;
        double coefficient = 1;
        int power = 1;
        
        System.out.println("Enter a polynomial that starts with 'f(x)=': ");
        String polynomial = keyboard.nextLine();
        System.out.println("Enter a value for x: ");
        int x = keyboard.nextInt();

        keyboard.close();
        
        polynomial = polynomial.substring(polynomial.indexOf("=") + 1);
        
        StringTokenizer st = new StringTokenizer(polynomial, " ");
        
        
        while (st.hasMoreTokens()) {
            String token = st.nextToken();
            System.out.println(token);
        
            if (token.contains("x")) {
                if (token.contains("^")) {
                    power = Integer.parseInt(token.substring(token.indexOf("^") + 1));
                }
                coefficient = Double.parseDouble(token.substring(0, token.indexOf("x")));
            } else {
                coefficient = Double.parseDouble(token);
                power = 0;
            }
            
        System.out.println("coefficient: " + coefficient + "\npower: " + power);
            
        result += coefficient * Math.pow(x, power);
        }
    System.out.println("\nf(" + x + ")=" + result);
    }
}
